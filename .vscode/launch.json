    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/WebTimer/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/WebTimer/tests/**/*.js"
            ],
            "stopOnEntry": false,
			"runtimeExecutable": null,
			"env": { "NODE_ENV": "testing"}
        },
        {
            "preLaunchTask": "build-debug",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Debug Build",
            "program": "${workspaceFolder}/WebTimer/main.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk=9222"
            ],
            "port": 9222,
            "env": {
                "MAIL_SECURE_PORT": "465",
                "SERVER_PORT": "3444",
                "SERVER_HOST": "localhost",
                "SERVER_PFX_PATH": "1.pfx",
                "LOGGER_LEVEL": "info"
            }
        },
        {
            "preLaunchTask": "build-prod",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Prod Build",
            "program": "${workspaceFolder}/WebTimer/main.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk=9222"
            ],
            "port": 9222,
            "env": {
                //"NODE_ENV": "production",
                "MAIL_SECURE_PORT": "465",
                "SERVER_PORT": "3444",
                "SERVER_HOST": "localhost",
                "SERVER_PFX_PATH": "1.pfx"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Launch",
            "program": "${workspaceFolder}/WebTimer/main.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk=9222"
            ],
            "port": 9222,
            "env": {
                "MAIL_SECURE_PORT": "465",
                "SERVER_PORT": "3444",
                "SERVER_HOST": "localhost",
                "SERVER_PFX_PATH": "1.pfx",
                "LOGGER_LEVEL": "info"
            }
        }
    ]
}